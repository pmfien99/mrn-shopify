    {
      "id": "enable_quick_buy_drawer",
      "type": "checkbox",
      "label": "t:sections.featured_collection.settings.quick_buy.enable_quick_buy_drawer.label",
      "info": "t:sections.featured_collection.settings.quick_buy.enable_quick_buy_drawer.info"
