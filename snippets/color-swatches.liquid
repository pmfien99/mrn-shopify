{% assign colors = settings.color_swatch_hexes | newline_to_br | strip_newlines | replace: '<br />', ',' | split: ',' %}
<style>
    {%- for color in colors -%}
    .swatch-custom-color-{{ color | split: ':' | first | handleize }} {
        background-color: {{ color | split: ':' | last }}!important;
    }
    {%- endfor -%}
</style>